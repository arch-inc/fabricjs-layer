{
  "name": "@arch-inc/fabricjs-eraser",
  "version": "0.0.15",
  "description": "A simple eraser implementation for Fabric.js",
  "main": "dist/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "clean": "del-cli dist",
    "prettify": "prettier --write ./**/*.{ts,tsx}",
    "copy": "ncp dist/index.js docs/public/lib.js",
    "dev-pages": "npm run build && npm run copy && next ./docs",
    "build-pages": "npm run copy && next build ./docs",
    "start-pages": "next start ./docs",
    "export-pages": "next export ./docs",
    "build-docs": "typedoc --mode library --excludeExternals --excludeNotExported --excludePrivate --excludeProtected --out ./docs/out/api ./lib/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arch-inc/fabricjs-eraser.git"
  },
  "keywords": [
    "canvas",
    "graphic",
    "graphics",
    "SVG",
    "node-canvas",
    "fabric"
  ],
  "author": "Jun Kato <i@junkato.jp>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arch-inc/fabricjs-eraser/issues"
  },
  "homepage": "https://github.com/arch-inc/fabricjs-eraser#readme",
  "dependencies": {
    "@arch-inc/fabricjs-psbrush": "0.0.15",
    "fabric": "^4.0.0-beta.7"
  },
  "devDependencies": {
    "@types/fabric": "^3.6.2",
    "@types/react": "^16.9.23",
    "del-cli": "^3.0.0",
    "ncp": "^2.0.0",
    "next": "^9.2.2",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rollup": "^2.0.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "typedoc": "^0.17.0-3",
    "typescript": "^3.8.3"
  }
}
